pipeline {
    agent any

    stages {
        stage("Clone Code") {
            steps {
                echo "ğŸ” Cloning the code from GitHub..."
                git branch: "main", url: "https://github.com/dhruv-dosh/AnjularDocker.git"
            }
        }

        stage("Clean Old Containers & Images") {
            steps {
                echo "ğŸ§¹ Removing old containers and images..."
                bat '''
                cd hello-app
                docker-compose down
                '''
            }
        }

        stage("Build Docker Image") {
            steps {
                echo "âš™ï¸ Building Docker image..."
                bat '''
                cd hello-app
                docker-compose up --build -d
                '''
            }
        }
    }

    post {
        success {
            echo "âœ… Deployment successful! Application is running"
        }
        failure {
            echo "âŒ Deployment failed! Check Jenkins logs for details."
        }
    }
}
